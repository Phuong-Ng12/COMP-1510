package TESTING;

import java.util.Scanner;

public class hasnextint {

    public static void main(String[] args) {
        int a;
        System.out.println("Please enter an integer: ");
        Scanner scan = new Scanner(System.in);
        int b = scan.nextInt();
        if (scan.hasNextInt(b)) {
            a = 1;
        }
        else {
            a = 0;
        }
        System.out.println(a);
    }

}
