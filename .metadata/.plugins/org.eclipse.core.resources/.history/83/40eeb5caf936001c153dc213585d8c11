        Random ran = new Random();
        boolean result = true;
 
        while (result) {
            int randomNumberBetweenTenAndTwentyButNotFifteen = ran.nextInt() * 10 + 10;
            final int exludedNum = 15;
            if (randomNumberBetweenTenAndTwentyButNotFifteen == exludedNum) {
                
            }
        }
        return randomNumberBetweenTenAndTwentyButNotFifteen;
    }
    
