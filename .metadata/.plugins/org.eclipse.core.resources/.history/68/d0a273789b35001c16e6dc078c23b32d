package TESTING;

import java.util.Scanner;

public class hasnextint {

    public static void main(String[] args) {
        System.out.println("Please enter an integer: ");
        Scanner scan = new Scanner(System.in);
        if (scan.hasNextInt()) {
            int a = 1;
        }
        else {
            int a = 0;
        }
    }

}
